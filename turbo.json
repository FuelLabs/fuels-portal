{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [".env", ".env.production", ".env.test"],
  "globalEnv": ["NODE_ENV"],
  "pipeline": {
    "ts:check": {
      "dependsOn": [],
      "outputs": ["./**/*.typegen.ts"]
    },
    "test": {
      "cache": false,
      "dependsOn": ["ts:check"],
      "outputs": []
    },
    "build": {
      "dependsOn": ["ts:check"],
      "outputs": ["dist/**"]
    },
    "build:preview": {
      "cache": false,
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "dev": {
      "cache": false
    }
  }
}
